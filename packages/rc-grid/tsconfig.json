{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es5",
        "lib": ["ESNext", "DOM", "DOM.Iterable"],
        "jsx": "react",
        "declaration": true,
        "allowJs": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true
    },
    "include": ["src/**/*", "tests/__tests__"],
    "exclude": ["node_modules", "**/*.spec.ts", "**/*.test.tsx"]
}
